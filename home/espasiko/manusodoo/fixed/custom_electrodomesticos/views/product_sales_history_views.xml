<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para product.sales.history -->
        <record id="product_sales_history_form_view" model="ir.ui.view">
            <field name="name">product.sales.history.form</field>
            <field name="model">product.sales.history</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_tmpl_id" options="{'no_create': True}"/>
                                <field name="fecha"/>
                                <field name="cliente_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="cantidad"/>
                                <field name="precio_unitario"/>
                                <field name="total"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notas">
                                <field name="notas" nolabel="1" placeholder="Notas adicionales..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vista de árbol para product.sales.history -->
        <record id="product_sales_history_tree_view" model="ir.ui.view">
            <field name="name">product.sales.history.tree</field>
            <field name="model">product.sales.history</field>
            <field name="arch" type="xml">
                <tree string="Historial de Ventas">
                    <field name="name"/>
                    <field name="product_tmpl_id"/>
                    <field name="fecha"/>
                    <field name="cantidad" sum="Total Unidades"/>
                    <field name="precio_unitario" avg="Precio Promedio"/>
                    <field name="total" sum="Total Ventas"/>
                    <field name="cliente_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Vista de búsqueda para product.sales.history -->
        <record id="product_sales_history_search_view" model="ir.ui.view">
            <field name="name">product.sales.history.search</field>
            <field name="model">product.sales.history</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="product_tmpl_id"/>
                    <field name="cliente_id"/>
                    <filter string="Este Mes" name="this_month" domain="[('fecha', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')), ('fecha', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Este Año" name="this_year" domain="[('fecha', '&gt;=', (context_today() + relativedelta(month=1, day=1)).strftime('%Y-%m-%d')), ('fecha', '&lt;=', (context_today() + relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Producto" name="group_by_product" context="{'group_by': 'product_tmpl_id'}"/>
                        <filter string="Cliente" name="group_by_customer" context="{'group_by': 'cliente_id'}"/>
                        <filter string="Fecha" name="group_by_date" context="{'group_by': 'fecha'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Acción para product.sales.history -->
        <record id="action_product_sales_history" model="ir.actions.act_window">
            <field name="name">Historial de Ventas</field>
            <field name="res_model">product.sales.history</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="product_sales_history_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registre su primera venta en el historial
                </p>
                <p>
                    El historial de ventas le permite llevar un registro detallado de las ventas de cada producto.
                </p>
            </field>
        </record>
    </data>
</odoo>