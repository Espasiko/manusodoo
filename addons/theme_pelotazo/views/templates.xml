<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template personalizado para header distintivo -->
    <template id="pelotazo_header_custom" inherit_id="website.layout" name="Pelotazo Header Custom">
        <xpath expr="//header" position="before">
            <div class="pelotazo-identifier" style="background: linear-gradient(90deg, #e30613, #ff4d4d, #e30613); color: white; text-align: center; padding: 8px 0; font-weight: bold; font-size: 14px; position: relative; overflow: hidden; z-index: 1001;">
                <div style="position: relative; z-index: 2;">
                    üèÄ TEMA PELOTAZO ACTIVO - Dise√±o Personalizado üèÄ
                </div>
                <div style="position: absolute; top: 0; left: -100%; width: 100%; height: 100%; background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent); animation: shine 3s infinite;"></div>
            </div>
        </xpath>
    </template>
    
    <!-- Estilos adicionales para el tema -->
    <template id="pelotazo_custom_styles" inherit_id="website.layout" name="Pelotazo Custom Styles">
        <xpath expr="//head" position="inside">
            <style>
                @keyframes shine {
                    0% { left: -100%; }
                    100% { left: 100%; }
                }
                
                .pelotazo-identifier {
                    box-shadow: 0 2px 10px rgba(227, 6, 19, 0.4);
                }
                
                /* Asegurar que el header sea distintivo */
                .o_main_navbar, #top {
                    background: linear-gradient(135deg, #e30613 0%, #c10511 100%) !important;
                    border-bottom: 3px solid #ff4d4d !important;
                }
                
                .o_main_navbar .navbar-nav .nav-link,
                #top .navbar-nav .nav-link {
                    color: white !important;
                    text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
                }
            </style>
        </xpath>
    </template>
</odoo>
